{
  "name": "xx-commerce",
  "version": "1.0.0",
  "description": "Minimalistic, real-time e-commerce web app",
  "main": "server/dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "vercel-build": "cd client && npm run vercel-build",
    "start": "cd server && node dist/index.js",
    "render-build": "./build.sh",
    "render-start": "cd server && node dist/index.js",
    "build-server": "cd server && npm install && npm run build",
    "start-server": "cd server && node dist/index.js"
  },
  "keywords": [
    "e-commerce",
    "react",
    "typescript",
    "real-time"
  ],
  "author": "XX-Commerce Team",
  "license": "MIT",
  "dependencies": {
    "@stripe/stripe-js": "^7.8.0",
    "@types/sqlite3": "^3.1.11",
    "concurrently": "^8.2.2",
    "sqlite3": "^5.1.7"
  }
}
